<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_white_1000">
    <TextView
        android:layout_width="0dp"
        android:layout_weight=".16"
        android:textColor="@color/md_black_1000"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:fontFamily="@font/cabin_medium"
        android:id="@+id/textView_time"/>
    <TextView
        android:layout_width="0dp"
        android:layout_weight=".16"
        android:textColor="@color/md_black_1000"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:fontFamily="@font/cabin_medium"
        android:id="@+id/textView_monday_sub"/>
    <TextView
        android:layout_width="0dp"
        android:layout_weight=".16"
        android:textColor="@color/md_black_1000"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:fontFamily="@font/cabin_medium"
        android:id="@+id/textView_tuesday_sub"/>
    <TextView
        android:layout_width="0dp"
        android:layout_weight=".16"
        android:textColor="@color/md_black_1000"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:fontFamily="@font/cabin_medium"
        android:id="@+id/textView_wednesday_sub"/>
    <TextView
        android:layout_width="0dp"
        android:layout_weight=".16"
        android:textColor="@color/md_black_1000"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:fontFamily="@font/cabin_medium"
        android:id="@+id/textView_thursday_sub"/>
    <TextView
        android:layout_width="0dp"
        android:layout_weight=".16"
        android:textColor="@color/md_black_1000"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:fontFamily="@font/cabin_medium"
        android:id="@+id/textView_friday_sub"/>
    <TextView
        android:layout_width="0dp"
        android:layout_weight=".16"
        android:textColor="@color/md_black_1000"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:gravity="center"
        android:id="@+id/textView_saturday_sub"/>
</LinearLayout>