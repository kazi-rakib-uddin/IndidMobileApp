<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">


<androidx.cardview.widget.CardView
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:elevation="5dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="3dp"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/img_recycler">

    <LinearLayout
        android:id="@+id/expandable_lin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >


            <ImageView
                android:id="@+id/iv_syllabus"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:padding="10dp"
                android:layout_centerVertical="true"
                tools:ignore="ContentDescription" />


            <TextView
                android:id="@+id/tv_chapter_name"
                android:layout_width="@dimen/_200sdp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:text="Student Name"
                android:textAllCaps="true"
                android:textSize="@dimen/_13sdp"
                android:layout_gravity="center"
                android:textColor="@color/md_white_1000"
                android:textStyle="bold"/>



    </LinearLayout>

    </LinearLayout>


        <ImageView
            android:layout_gravity="center"
            android:id="@+id/arrow_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_down_arrow"
            android:tint="@color/md_white_1000"
            android:layout_marginRight="@dimen/margin_10"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:backgroundTint="@color/md_white_1000"
            />

        <ImageView
            android:layout_gravity="center"
            android:id="@+id/arrow_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_up"
            android:tint="@color/md_white_1000"
            android:layout_marginRight="@dimen/margin_10"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:backgroundTint="@color/md_white_1000"
            />



    </RelativeLayout>


        <RelativeLayout
            android:id="@+id/expandable_rel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/md_black_1000"
                android:visibility="gone"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:weightSum="3">


                    <LinearLayout
                        android:id="@+id/lin_video"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        >


                        <ImageView
                            android:id="@+id/iv_chapter"
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="48dp"
                            android:layout_gravity="center"
                            android:src="@drawable/img_video" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Videos"/>


                    </LinearLayout>


                    <View
                        android:layout_width="1dp"
                        android:layout_height="@dimen/_50sdp"
                        android:background="@color/md_black_1000"/>



                    <LinearLayout
                        android:id="@+id/lin_ebook"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">


                        <ImageView
                            android:id="@+id/iv_ebook"
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:src="@drawable/img_ebook"
                            android:layout_gravity="center"
                            android:tint="@color/md_black_1000"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="E-Books"
                            android:layout_gravity="center"
                            />


                    </LinearLayout>


                    <View
                        android:layout_width="1dp"
                        android:layout_height="@dimen/_50sdp"
                        android:background="@color/md_black_1000"/>



                    <LinearLayout
                        android:id="@+id/lin_exam"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">


                        <ImageView
                            android:id="@+id/iv_videos"
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:src="@drawable/img_exam"
                            android:layout_gravity="center"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Exam"
                            android:layout_gravity="center"
                            />


                    </LinearLayout>





                </LinearLayout>



        </RelativeLayout>



    </LinearLayout>





</androidx.cardview.widget.CardView>

</RelativeLayout>