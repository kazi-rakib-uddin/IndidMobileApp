<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        >


        <ImageView
            android:layout_width="@dimen/spacing_50dp"
            android:layout_height="@dimen/spacing_50dp"
            android:src="@drawable/error_wifi"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_20"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Network Error"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/margin_20"
            android:fontFamily="@font/cabin_medium"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_20"
            android:textAlignment="center"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please check your internet connection and try again"
            android:textColor="@color/colorBlack"
            android:textSize="23sp"
            android:fontFamily="@font/cabin_medium"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/spacing_15dp"
            android:textAlignment="center"
            android:layout_marginBottom="@dimen/margin_10"
            />

        <!--<Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="try again"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_20"
            android:layout_marginBottom="@dimen/margin_10"
            />-->


    </LinearLayout>



</RelativeLayout>