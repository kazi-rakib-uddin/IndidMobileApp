<?xml version="1.0" encoding="utf-8"?>

<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RegistrationActivity">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="3dp"
            app:cardPreventCornerOverlap="false"
            app:cardUseCompatPadding="true"
            >



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <LinearLayout
                    android:id="@+id/lin_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@color/colorGreen">



                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="20dp"
                        android:tint="@color/colorWhite"
                        android:padding="10dp"
                       />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="22sp"
                        android:text="REGISTER"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:textColor="@color/colorWhite"
                        android:fontFamily="@font/cabin_medium"/>




                </LinearLayout>


                <ImageView
                    android:id="@+id/img_square"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/lin_1"
                    android:src="@drawable/square"
                    android:rotation="45"
                    android:layout_marginTop="-10dp"
                    />



                <RelativeLayout
                    android:id="@+id/rel_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img_square"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">

                    <ImageView
                        android:id="@+id/phone_icon"
                        android:layout_width="45dp"
                        android:layout_height="50dp"
                        android:background="@color/colorGreen"
                        android:padding="8dp"

                        android:tint="@color/colorWhite" />


                    <EditText
                        android:id="@+id/et_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/phone_icon"
                        android:layout_toRightOf="@+id/phone_icon"
                        android:background="@color/edtiTextBG"
                        android:layout_alignParentTop="true"
                        android:paddingLeft="20dp"
                        android:hint="Phone No"
                        android:inputType="number"
                        android:textSize="17sp"
                        />



                </RelativeLayout>



                <LinearLayout
                    android:layout_below="@+id/rel_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >


                    <Button
                        android:id="@+id/btn_verify_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="verify phone"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:padding="10dp"
                        android:visibility="gone"
                        android:textColor="@color/colorWhite"
                        android:background="@drawable/round_btn_verify"/>




                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/img_square"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp">

                        <ImageView
                            android:id="@+id/otp_icon"
                            android:layout_width="45dp"
                            android:layout_height="50dp"
                            android:background="@color/colorGreen"
                            android:padding="8dp"
                            android:visibility="gone"
                            android:src="@drawable/otp_icon"
                            android:tint="@color/colorWhite"/>


                        <EditText
                            android:id="@+id/et_otp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/otp_icon"
                            android:layout_toRightOf="@+id/otp_icon"
                            android:background="@color/edtiTextBG"
                            android:layout_alignParentTop="true"
                            android:inputType="number"
                            android:maxLength="4"
                            android:paddingLeft="20dp"
                            android:hint="OTP"
                            android:visibility="gone"
                            android:textSize="17sp"
                            />



                    </RelativeLayout>


                    <Button
                        android:id="@+id/btn_verify_otp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="verify otp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:padding="10dp"
                        android:visibility="gone"
                        android:background="@drawable/round_btn_verify"
                        android:textColor="@color/colorWhite"/>




                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/img_square"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp">

                        <ImageView
                            android:id="@+id/name_icon"
                            android:layout_width="45dp"
                            android:layout_height="50dp"
                            android:background="@color/colorGreen"
                            android:padding="8dp"

                            android:tint="@color/colorWhite"/>


                        <EditText
                            android:id="@+id/et_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/name_icon"
                            android:layout_toRightOf="@+id/name_icon"
                            android:background="@color/edtiTextBG"
                            android:layout_alignParentTop="true"
                            android:paddingLeft="20dp"
                            android:hint="Name"
                            android:textSize="17sp"
                            />



                    </RelativeLayout>




                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/img_square"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp">

                        <ImageView
                            android:id="@+id/class_icon"
                            android:layout_width="45dp"
                            android:layout_height="50dp"
                            android:background="@color/colorGreen"
                            android:padding="8dp"

                            android:tint="@color/colorWhite"/>


                        <Spinner
                            android:id="@+id/cls_spinner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/class_icon"
                            android:layout_toRightOf="@+id/class_icon"
                            android:layout_alignParentTop="true"
                            android:paddingLeft="10dp"
                            android:background="@color/edtiTextBG"
                            android:paddingTop="5dp"

                            />



                    </RelativeLayout>





                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/img_square"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp">

                        <ImageView
                            android:id="@+id/board_icon"
                            android:layout_width="45dp"
                            android:layout_height="50dp"
                            android:background="@color/colorGreen"
                            android:padding="8dp"
                            android:tint="@color/colorWhite"/>


                        <Spinner
                            android:id="@+id/board_spinner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/board_icon"
                            android:layout_toRightOf="@+id/board_icon"
                            android:background="@color/edtiTextBG"
                            android:layout_alignParentTop="true"
                            android:paddingLeft="20dp"
                            android:fontFamily="@font/cabin_medium"
                            android:textColor="@color/colorBlack"
                            />





                    </RelativeLayout>





                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/img_square"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp">

                        <ImageView
                            android:id="@+id/dob_icon"
                            android:layout_width="45dp"
                            android:layout_height="50dp"
                            android:background="@color/colorGreen"
                            android:padding="8dp"
                            android:tint="@color/colorWhite"/>


                        <TextView
                            android:id="@+id/tv_dob"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/dob_icon"
                            android:layout_toRightOf="@+id/dob_icon"
                            android:background="@color/edtiTextBG"
                            android:layout_alignParentTop="true"
                            android:paddingLeft="20dp"
                            android:paddingTop="10dp"
                            android:hint="DOB"
                            android:textSize="20sp"
                            />



                    </RelativeLayout>




                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/img_square"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:visibility="gone"
                        android:layout_marginRight="10dp">

                        <ImageView
                            android:id="@+id/img_profile"
                            android:layout_width="100dp"
                            android:layout_height="60dp"
                            android:padding="8dp"
                            android:visibility="gone"
                            />


                        <Button
                            android:id="@+id/btn_browes"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/img_profile"
                            android:background="@color/edtiTextBG"
                            android:layout_alignParentTop="true"
                            android:paddingLeft="20dp"
                            android:visibility="gone"
                            android:layout_alignBottom="@+id/img_profile"
                            android:hint="Browes"
                            android:textSize="17sp"
                            />



                    </RelativeLayout>




                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/img_square"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp">



                        <EditText
                            android:id="@+id/et_address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/edtiTextBG"
                            android:layout_alignParentTop="true"
                            android:paddingLeft="10dp"
                            android:hint="Address"
                            android:lines="8"
                            android:maxLines="10"
                            android:minLines="6"
                            android:scrollbars="vertical"
                            android:gravity="top|left"
                            android:textSize="17sp"
                            />



                    </RelativeLayout>




                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/img_square"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp">

                        <ImageView
                            android:id="@+id/pass_icon"
                            android:layout_width="45dp"
                            android:layout_height="50dp"
                            android:background="@color/colorGreen"
                            android:padding="8dp"

                            android:tint="@color/colorWhite"/>


                        <EditText
                            android:id="@+id/et_password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/pass_icon"
                            android:layout_toRightOf="@+id/pass_icon"
                            android:background="@color/edtiTextBG"
                            android:layout_alignParentTop="true"
                            android:paddingLeft="20dp"
                            android:hint="Pin code"
                            android:textSize="17sp"
                            android:inputType="number"
                            android:fontFamily="@font/cabin_medium"
                            android:textColor="@color/colorBlack"
                            />





                    </RelativeLayout>







                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mode Of Text"
                        android:textSize="20sp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"/>



                    <RadioGroup
                        android:id="@+id/rg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <RadioButton
                            android:id="@+id/rb_online"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:text="Online"/>

                        <RadioButton
                            android:id="@+id/rb_offline"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:text="Offline"/>




                    </RadioGroup>







                    <Button
                        android:id="@+id/btn_register"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Register"
                        android:textColor="@color/colorWhite"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="8dp"/>


                    <Button
                        android:id="@+id/btn_login"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Login"
                        android:textColor="@color/colorWhite"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="8dp"/>








                </LinearLayout>









            </RelativeLayout>





        </androidx.cardview.widget.CardView>


    </RelativeLayout>

</ScrollView>