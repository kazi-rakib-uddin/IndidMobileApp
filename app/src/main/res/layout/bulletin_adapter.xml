<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    >

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorGreen"
    android:padding="5dp"
    >
    <TextView
        android:fontFamily="@font/cabin_medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="#FFF"
        android:gravity="center"
        android:textAlignment="center"
        android:text="Bulletin title"
        android:id="@+id/tv_bulletins_title"/>
    <TextView
        android:fontFamily="@font/cabin_medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:layout_marginTop="@dimen/margin_10"
        android:textAlignment="center"
        android:text="Bulletin Date"
        android:textColor="#FFF"
        android:gravity="center"
        android:id="@+id/tv_bulletins_date"/>
    <TextView
        android:fontFamily="@font/cabin_medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:layout_marginTop="@dimen/margin_10"
        android:text="Bulletin Body"
        android:textColor="#FFF"
        android:id="@+id/tv_bulletins_body"/>
    <TextView
        android:fontFamily="@font/cabin_medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:gravity="center"
        android:textAlignment="center"
        android:layout_marginTop="@dimen/margin_10"
        android:text="Bulletin post by:"
        android:textColor="#FFF"
        android:id="@+id/tv_bulletins_post_by"/>


</LinearLayout>

</androidx.cardview.widget.CardView>