<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        <Button
            android:id="@+id/btn_start_test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Test"
            android:layout_toRightOf="@+id/lin"
            android:textAllCaps="false"
            android:layout_centerInParent="true"
            android:padding="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:textSize="@dimen/_12sdp"
            />

            <Button
                android:id="@+id/btn_view_solution"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View Solition"
                android:layout_toRightOf="@+id/lin"
                android:textAllCaps="false"
                android:layout_centerInParent="true"
                android:padding="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:textSize="@dimen/_12sdp"
                android:visibility="invisible"
                />


        <LinearLayout
            android:id="@+id/lin"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_exam_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"

                android:padding="10dp"
                android:fontFamily="@font/cabin_medium"
                android:textColor="@color/colorBlack"/>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/tv_exam_subject"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:text="Math"
                    android:padding="@dimen/_5sdp"
                    android:fontFamily="@font/cabin_medium"
                    android:gravity="center"/>

                <View
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:layout_marginRight="@dimen/_3sdp"
                    android:background="@color/colorGray"
                    android:layout_below="@+id/ll_like_comment_count"
                    android:layout_width="@dimen/_1sdp"
                    android:layout_height="@dimen/_10sdp"
                    />



                <TextView
                    android:id="@+id/tv_exam_mins"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:text="1 mins"
                    android:padding="@dimen/_5sdp"
                    android:fontFamily="@font/cabin_medium"
                    android:gravity="center"/>

                <View
                    android:id="@+id/view"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:layout_marginRight="@dimen/_3sdp"
                    android:background="@color/colorGray"
                    android:layout_below="@+id/ll_like_comment_count"
                    android:layout_width="@dimen/_1sdp"
                    android:layout_height="@dimen/_10sdp"
                    />



                <TextView
                    android:id="@+id/tv_exam_question"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:text="1 question"
                    android:padding="@dimen/_5sdp"
                    android:fontFamily="@font/cabin_medium"
                    android:gravity="center"/>




            </LinearLayout>



        </LinearLayout>

        </RelativeLayout>


    </androidx.cardview.widget.CardView>


</RelativeLayout>